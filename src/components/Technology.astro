---
const img = Astro.props.img;
const name = Astro.props.name;
const description = Astro.props.description;
const url = Astro.props.url;
---

<a href={url}>
  <article
    class="bg-[#B51636] rounded-lg mx-4 sm:w-[30em] h-[16em] hover:bg-[#c42948] cursor-pointer"
  >
    <div class="flex justify-center">
      <img src={img} alt="react" class="w-20 h-20 mt-2" />
    </div>
    <div class="flex flex-col justify-center">
      <h1 class="text-2xl font-bold text-center p-2">{name}</h1>
      <p class="text-white p-5 text-center">
        {description}
      </p>
    </div>
  </article>
</a>
