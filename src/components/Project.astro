---
  const { title } = Astro.props;
  const { description } = Astro.props;
  const { image } = Astro.props;
  const { link } = Astro.props;
  const { technologies } = Astro.props;
---

<a href={link}>
    <article
      class="rounded-2xl w-[30em] h-[35em] mr-4 bg-[#dc143c] cursor-pointer transition-all hover:-translate-y-4 hover:bg-[#b51636]"
    >
      <img
        src={image}
        alt="portada del proyecto"
        width="100%"
        class="rounded-t-2xl h-[20em] object-cover"
      />
      <h2 class="text-2xl my-4 text-center font-bold">{title}</h2>
      <div class="flex mb-2 place-content-center">
        {technologies.map((technology: string[]) => (
          <span
            class="text-white font-semibold text-sm bg-[#f42951] rounded-full px-2 py-1 mr-2"
          >
            {technology}
          </span>
        ))}
      </div>
      <p class="mb-5 text-justify p-2 font-semibold">
        {description}
      </p>
    </article>
  </a>