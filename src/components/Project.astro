---
const { title } = Astro.props;
const { description } = Astro.props;
const { image } = Astro.props;
const { link } = Astro.props;
const { technologies } = Astro.props;
const { working } = Astro.props;
---

<a href={link}>
  <article
    class="rounded-2xl mx-5 sm:w-[30em] sm:h-[32em] h-[36em] bg-[#dc143c] cursor-pointer transition-all hover:-translate-y-4 hover:bg-[#b51636]"
  >
    <img
      src={image}
      alt="portada del proyecto"
      width="100%"
      class="rounded-t-2xl h-[13em] object-cover"
    />
    <h2 class="text-2xl my-4 text-center font-bold">{title}</h2>
    <div class="flex flex-wrap gap-4 mb-2 place-content-center">
      {
        technologies.map((technology: string[]) => (
          <span class="text-white font-semibold text-sm bg-[#f42951] rounded-full px-2 py-1 mr-2">
            {technology}
          </span>
        ))
      }
    </div>
    <p class="mb-5 text-justify p-2 font-semibold">
      {description}
    </p>
    {
      working ? (
        <div class="flex mb-2 place-content-center">
          <span class="text-white font-semibold text-sm bg-[#050505] rounded-full px-2 py-1 mr-2">
            {working}
          </span>
        </div>
      ) : (
        ""
      )
    }
  </article>
</a>

<style>
  @media screen and (min-width: 510px) and (max-width: 633px) {
    article {
      height: 32em !important;
    }
  }
</style>
